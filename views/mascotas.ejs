<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
</head>

<body>

    <div class="mb-3 m-5">
        <form action="newmascot" method="post">
        <label for="idid" class="form-label">Id:</label>
        <input type="text" name="campoId" class="form-control" id="idid" placeholder="ingrese un id" >

        <label for="name" class="form-label">Nombre:</label>
        <input type="text" name="campoNombre" class="form-control" id="name" placeholder="ingrese un nombre" >

        <label for="idraza" class="form-label">Raza:</label>
        <input type="text" name="campoRaza" class="form-control" id="idraza" placeholder="ingrese una raza" >

        <input type="submit" class="btn btn-secondary m-5" value="Enviar"> 
    </form> 
    </div>



    <table class="table table-striped table-bordered m-5">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Raza</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
            <% listadoMascotas.forEach(function(Mascotas){ %>
          <tr>
            <td><%=Mascotas.id%></td>
            <td><%=Mascotas.Name%></td>
            <td><%=Mascotas.raza%></td>
            <td><button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalact" onclick="llenar(`<%=Mascotas.id%>`, `<%=Mascotas.Name%>`, `<%=Mascotas.raza%>`)">
                Editar
              </button>
              <a href="eliminar/<%=Mascotas.id%>">Eliminar</a>
            </td>

          </tr>
          <% })%>
        </tbody>
      </table>


      <!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="modalact" tabindex="-1" aria-labelledby="modalactLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar mascota</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="ola" method="post">
            <label for="idid" class="form-label">Id:</label>
            <input type="text" class="form-control" id="ididact" placeholder="ingrese un id" name="Idact" readonly >
    
            <label for="name" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="nameact" placeholder="ingrese un nombre" name="Nameact">
    
            <label for="idraza" class="form-label">Raza:</label>
            <input type="text" class="form-control" id="idrazaact" placeholder="ingrese una raza" name="Razaact">
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-primary" >Actualizar cambios</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  
  <script>
    function llenar(a,b,c){
      ididact.value = a;
      nameact.value = b;
      idrazaact.value = c;
    }
  </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

  </body>

</html>